            "type": "password",
            "placeholder": "Please type in your password",
            "value": "This1sSuchAS3curePassw0rd",
            "required": true,
            "inputmode": "text"
          },
          "validation": {
            "required": {
              "error": "The Password is mandatory!"
            },
            "equality": {
              "args": [
                "password-repeat"
              ],
              "error": "The passwords don't match!"
            }
          }
        },
        {
          "name": "password-repeat",
          "element": "ion-input",
          "label": "Repeat your Password:",
