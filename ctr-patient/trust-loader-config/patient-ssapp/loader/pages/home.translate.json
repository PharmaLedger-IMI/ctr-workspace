    "login": {
      "title": "Login",
      "buttons": {
        "label": "Login",
        "props": {
          "name": "login",
          "type": "submit",
          "fill": "solid",
          "expand": "block",
          "color": "secondary",
          "className": "ion-margin-start"
        }
      },
      "fields": [
        {
          "name": "firstname",
          "element": "ion-input",
          "label": "First Name:",
          "public": true,
          "props": {
            "type": "text",
            "placeholder": "Please enter your first name here...",
            "value": "John",
            "required": true,
            "inputmode": "text"
          },
          "validation": {
            "required": {
              "error": "The First Name is mandatory!"
            }
          }
        },
        {
          "name": "lastname",
          "element": "ion-input",
          "label": "Last Name:",
          "public": true,
          "props": {
            "type": "text",
            "placeholder": "Please enter your last name here...",
            "value": "McTester",
            "required": true
          },
          "validation": {
            "required": {
              "error": "The ID is mandatory!"
            }
          }
        },
        {
          "name": "email",
          "element": "ion-input",
          "label": "Registered Email:",
          "public": true,
          "props": {
            "type": "email",
            "placeholder": "Please enter your email here...",
            "value": "pharmaledger.team@pdmfc.com",
            "required": true,
            "inputmode": "email"
