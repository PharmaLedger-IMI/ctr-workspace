        },
        {
            "name": "trust-loader-config",
            "actions": [
                {
                    "type": "copy",
                    "src": "./trust-loader-config",
                    "target": "./apihub-root",
                    "options": {
                        "overwrite": true
                    }
                }
            ]
        },
        {
            "name": "dossier-explorer-wallet-prototype-build",
            "src": "",
            "actions": [
                {
